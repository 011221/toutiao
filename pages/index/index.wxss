/* 导航 */

.nav{
  width: 100%;
  height: 100rpx;
  font-size: 38rpx;
  line-height: 100rpx;
  background-color: #fff;
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 99;
  white-space: nowrap;
}
.nav_item{
  display: inline-block;
  width: 20%;
  margin:0 20rpx;
  transition: all .2s;
  text-align: center;
}
.nav .active{
  color: #036eb8;
  transition: all 1s;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent
 }

/* 中心 */
.main{
  margin-top: 60rpx;
    width: 100%;
    min-height: 50vh;
    box-sizing: border-box;
    overflow: auto;
    padding-bottom: 100rpx;
}
.item{
  width: 95%;
  background: #fff;
  box-sizing: border-box;
  border-radius: 14rpx;
  padding: 24rpx;
  margin: 20rpx auto;
  border-bottom: 1px solid #eee;
}
.title{
  font-size: 38rpx;
  margin-bottom: 15rpx;
  display: block;
}
/* 单个图 */
.imgbox{
  width: 100%;
  height: 300rpx;
}
.imgbox image{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  display: block;
}
/* 多个图 */
.imgbox2{
  width: 100%;
  display: flex;
}
.imgbox2 image{
  width: 32%;
  height: 160rpx;
  border-radius: 8rpx;
  display: block;
  margin-right: 10rpx;
}
.bottom{
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}
.bottom text{
  font-size: 26rpx;
  color: rgb(63, 99, 129);
  padding-right: 18rpx;
}
.jiazai{
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  /* margin: 24rpx 0; */
}
.jiesu{
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  margin: 24rpx 0;
}
.jiazai text{
  font-size: 26rpx;
  color: #999999;
}
.jiesu text{
  font-size: 26rpx;
  color: #999999;
}

/* 底部 */
.footer{
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #F7F7F7;
  display: flex;
  position: fixed;
  justify-content: space-around;
  bottom: 0;
  left: 0;
  z-index: 9;
}
.footer view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footer view image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 4rpx;
}
.footer view:first-child text{
  color: #036eb8;
}
.footer view text{
  font-size: 20rpx;
  color: #999999;
  margin-top: 4rpx;
}
