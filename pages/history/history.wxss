/* pages/watch_history/watch_history.wxss */
.items:first-of-type{
  margin-top: 20rpx;
}
.items{
  display: block;
  margin-bottom: 20rpx;
}
.weui-slidecell{
  width: 95%;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 0 auto;
}
.jiesu{
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  margin: 24rpx 0;
}
.jiesu text{
  font-size: 26rpx;
  color: #999999;
}
.xz{
  font-size: 30rpx;
  margin: 20rpx 0;
}
/* 单个图 */
.imgbox{
  width: 100%;
  height: 300rpx;
}
.imgbox image{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  display: block;
}
/* 多个图 */
.imgbox2{
  width: 100%;
  display: flex;
}
.imgbox2 image{
  width: 32%;
  height: 160rpx;
  border-radius: 8rpx;
  display: block;
  margin-right: 10rpx;
}