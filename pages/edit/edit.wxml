<!--pages/edit/edit.wxml-->
<view class="main">
  <view class="setInfo">
    <text>头像</text>
    <image bindtap="setimg" src="{{yulan || imageSrc || '/images/tou.png'}}"></image>
  </view>
  <view class="setName">
    <text>昵称</text>
    <input class="weui-input" value="{{name}}" bindinput="nametb" always-embed="" placeholder="输入昵称" maxlength="12" />
  </view>
  <view class="setSex">
    <text>性别</text>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view class="picker">
        {{array[index]}}
      </view>
    </picker>
  </view>
  <view class="setBay">
    <text>生日</text>
    <picker mode="date" value="{{date}}" start="1950-01-01" end="2021-01-01" bindchange="bindDateChange">
      <view class="picker">
        {{date||"2001-01-01"}}
      </view>
    </picker>
  </view>
  <view class="set" bindtap="set">
    <text>设置</text>
  </view>
</view>